<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:text="Order Complete!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:layout_marginTop="40.0dp"
        android:gravity="center"
        android:textSize="60dp"
        android:layout_marginRight="30.0dp"
        android:layout_marginLeft="30.0dp"
        android:textColor="#FF4818"
        />
    <TextView
        android:text="Light \nis on his way \nfor your delivery! :)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="25.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="75.0dp"
        android:layout_marginLeft="75.0dp"
        android:id="@+id/textView2" 
        android:textColor="#FF4818"/>
    <Button
        android:text="Return"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonReturn"
        android:textColor="@android:color/white"
        android:background="@drawable/round_cart_btn"
        android:layout_marginTop="50.0dp" 
        android:textStyle="bold"
        />





</LinearLayout>
