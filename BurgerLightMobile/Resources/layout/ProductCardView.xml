<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    >

    <androidx.cardview.widget.CardView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView1"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#EBDDD7"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10.9dp"
        android:layout_marginLeft="10.9dp"
        
        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginRight="29.4dp"
            android:layout_marginLeft="20.9dp"
            android:rowCount="3"
            android:columnCount="3"
            >
            <ImageView
                android:layout_width="200px"
                android:layout_height="200px"
                android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:layout_rowSpan="3"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/burger"
                android:layout_marginRight="18.6dp" />
            <TextView
                android:layout_width="122.6dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
              
                android:text="Caption"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="5dp"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="#ffff4818"
                android:textFontWeight="700" 
                />

            <TextView
                android:text="Price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:id="@+id/menuPrice"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="#ffff4818" 
                
               
                />
            <Button
                android:text="+ Cart"
                android:id="@+id/button1"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_marginLeft="0.0dp"
                android:textSize="9dp"
                android:layout_marginRight="17.7dp"
                android:layout_width="220px"
                android:layout_height="125px"
                android:background="@drawable/round_cart_btn"
                android:textColor="#ffffffff" 
                 android:textFontWeight="700" 
                />




        </GridLayout>



    </androidx.cardview.widget.CardView>






</FrameLayout>
